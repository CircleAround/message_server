<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Contents</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.contents %></td>
        <td><%= message.user_id %></td>
        <td><%= link_to 'Show', [:api, message] %></td>
        <td><%= link_to 'Edit', edit_api_message_path(message) %></td>
        <td><%= link_to 'Destroy', [:api, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_api_message_path %>
