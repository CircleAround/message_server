<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Contents</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.contents %></td>
        <td><%= link_to message.user_id, message.user %></td>
        <td>
          <% if message.image.attached? %>
            <%= link_to 'ç”»åƒ', polymorphic_path(message.image) %>
          <% end %>
        </td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

